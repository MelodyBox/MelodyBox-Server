{
  "name": "melodybox-server",
  "version": "0.1.0",
  "private": "true",
  "description": "The server code for the MelodyBox-Client",
  "main": "src/index.ts",
  "scripts": {
    "preinstall": "pip install -r requirements.txt",
    "build": "cross-env NODE_ENV=production tsc",
    "dev": "cross-env NODE_ENV=development nodemon --watch 'src/**/*.ts' --exec 'ts-node' src/index.ts",
    "start": "node dist/index.js",
    "serve": "npm run build && npm run start",
    "format": "prettier --write 'src/**/*.ts'",
    "lint": "eslint . --ext .ts",
    "test": "jest"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/MelodyBox/MelodyBox-Server.git"
  },
  "author": "MrPancakes39",
  "license": "MPL-2.0",
  "bugs": {
    "url": "https://github.com/MelodyBox/MelodyBox-Server/issues"
  },
  "homepage": "https://github.com/MelodyBox/MelodyBox-Server#readme",
  "dependencies": {
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "genius-lyrics": "^4.4.3",
    "node-calls-python": "^1.7.6",
    "ytdl-core": "^4.11.2",
    "zod": "^3.21.4"
  },
  "devDependencies": {
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.0",
    "@types/node": "^18.15.7",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^5.56.0",
    "@typescript-eslint/parser": "^5.56.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.36.0",
    "eslint-config-prettier": "^8.8.0",
    "jest": "^29.5.0",
    "nodemon": "^2.0.22",
    "prettier": "^2.8.7",
    "supertest": "^6.3.3",
    "ts-jest": "^29.0.5",
    "ts-node": "^10.9.1",
    "typescript": "^5.0.2"
  }
}
